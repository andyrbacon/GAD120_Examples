using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Write
{
    class Program
    {
        static void Main(string[] args)
        {
            Write("Look. ", ConsoleColor.Red, false);
            Write("It's so easy ", ConsoleColor.Green, false);
            Write("to change colors.", ConsoleColor.Yellow);
        }
        
        static void Write(string message, ConsoleColor color, bool doSpaceAfter = true)
        {
            Console.ForegroundColor = color;
            Console.Write(message);
            Console.ResetColor();
            if (doSpaceAfter)
                Console.WriteLine();
        }
   }
}
